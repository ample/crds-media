<?xml version="1.0" encoding="utf-8"?>
<catalog>
  <!-- Articles -->
  {% include _product-feed.html collection=site.articles %}

  <!-- Messages -->
  {% include _product-feed.html collection=site.messages %}

  <!-- Episodes -->
  {% include _product-feed.html collection=site.episodes %}

  <!-- Songs -->
  {% include _product-feed.html collection=site.songs %}

  <!-- Podcasts -->
  {% for item in site.podcasts %}
    <product>
      <product_id>{{ item.contentful_id }}</product_id>
      <product_name>{{ item.title | rstrip }}</product_name>
      <product_description>{{ item.description | markdownify | strip_html | xml_escape | replace: '&amp;', '&' | truncate: 1024 }}</product_description>
      <categories>
        <category>
          <category_name>{{ item.category.title }}{% if item.tags.size > 0 %}|{% endif %}{% for tag in item.tags %}{{ tag.title }}{% if forloop.last == false %}|{% endif %}{% endfor %}</category_name>
        </category>
      </categories>
      <price>1</price>
      <url>{{ item.slug }}</url>
      <product_image_url>{% if item.image.url %}{{ item.image.url }}
    {% else %}{{ site.default_image }}{% endif %}</product_image_url>
    </product>
  {% endfor %}
  <!-- Videos -->
  {% for item in site.videos %}
    <product>
      <product_id>{{ item.contentful_id }}</product_id>
      <product_name>{{ item.title | rstrip }}</product_name>
      <product_description>{% if item.description %}{{ item.description | markdownify | strip_html | xml_escape | replace: '&amp;', '&' | truncate: 1024 }}
    {% else %}{{ item.series.description | markdownify | strip_html | xml_escape | replace: '&amp;', '&' | truncate: 1024 }}{% endif %}</product_description>
      <categories>
        <category>
          <category_name>{{ item.category.title }}{% if item.tags.size > 0 %}|{% endif %}{% for tag in item.tags %}{{ tag.title }}{% if forloop.last == false %}|{% endif %}{% endfor %}</category_name>
        </category>
      </categories>
      <price>1</price>
      <url>{{ item.slug }}</url>
      <product_image_url>{% if item.image.url %}{{ item.image.url }}
    {% else %}{{ site.default_image }}{% endif %}</product_image_url>
    </product>
  {% endfor %}
  <!-- Series -->
  {% for item in site.series %}
    <product>
      <product_id>{{ item.contentful_id }}</product_id>
      <product_name>{{ item.title | rstrip }}</product_name>
      <product_description>{% if item.description %}{{ item.description | markdownify | strip_html | xml_escape | replace: '&amp;', '&' | truncate: 1024 }}
    {% else %}{{ item.series.description | markdownify | strip_html | xml_escape | replace: '&amp;', '&' | truncate: 1024 }}{% endif %}</product_description>
      <categories>
        <category>
          <category_name>{{ item.category.title }}{% if item.tags.size > 0 %}|{% endif %}{% for tag in item.tags %}{{ tag.title }}{% if forloop.last == false %}|{% endif %}{% endfor %}</category_name>
        </category>
      </categories>
      <price>1</price>
      <url>{{ item.slug }}</url>
      <product_image_url>{% if item.image.url %}{{ item.image.url }}
    {% else %}{{ site.default_image }}{% endif %}</product_image_url>
    </product>
  {% endfor %}
  <!-- Perspectives -->
  {% for item in site.perspectives %}
    <product>
      <product_id>{{ item.contentful_id }}</product_id>
      <product_name>{{ item.title | rstrip }}</product_name>
      <product_description>{{ item.body | markdownify | strip_html | xml_escape | replace: '&amp;', '&' | truncate: 1024 }}</product_description>
      <categories>
        <category>
          <category_name>{{ item.category.title }}{% if item.tags.size > 0 %}|{% endif %}{% for tag in item.tags %}{{ tag.title }}{% if forloop.last == false %}|{% endif %}{% endfor %}</category_name>
        </category>
      </categories>
      <price>1</price>
      <url>{{ item.slug }}</url>
      <product_image_url>{% if item.image.url %}{{ item.image.url }}
    {% else %}{{ site.default_image }}{% endif %}</product_image_url>
    </product>
  {% endfor %}

</catalog>
